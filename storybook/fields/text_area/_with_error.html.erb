<% content_for :story do %>
  <% @tangible_thing = Scaffolding::CompletelyConcrete::TangibleThing.new(text_area_value: story_params[:text_area_value]) %>
  <% @tangible_thing.errors.add(:text_area_value, story_params[:error_text]) %>

  <%= form_with model: [@tangible_thing], url: "#", local: true do |form| %>
    <%= render 'shared/fields/text_area', form: form, method: :text_area_value, options: {autofocus: true} %>
  <% end %>
<% end %>

<% content_for :source do %>
  <%= storybook_auto_source %>
<% end %>
