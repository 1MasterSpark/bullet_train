<% if content_for? :title %>
  <%= yield :title %>
<% elsif @title.present? %>
  <title><%= @title %> | <%= t('application.name') %></title>
<% else %>
  <title><%= t('application.name') %></title>
<% end %>

<meta charset="utf-8" />
<meta content="ie=edge" http-equiv="x-ua-compatible" />
<meta content="<%= t('application.keywords') %>" name="keywords" />
<meta content="<%= t('application.description') %>" name="description" />
<meta content="width=device-width, initial-scale=1" name="viewport" />

<%= csrf_meta_tags %>

<meta name="turbo-cache-control" content="no-cache">

<%= stylesheet_pack_tag 'light', media: 'all', 'data-turbo-track': 'reload' %>
<%= javascript_pack_tag 'light', 'data-turbo-track': 'reload' %>

<% if cloudinary_enabled? %>
<script src="//widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>
<% end %>

<%= render 'magic_test/support' if Rails.env.test? %>

