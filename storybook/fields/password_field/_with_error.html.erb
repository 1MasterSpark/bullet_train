<% content_for :story do %>
  <% @tangible_thing = Scaffolding::CompletelyConcrete::TangibleThing.new(password_field_value: story_params[:password_field_value]) %>
  <% @tangible_thing.errors.add(:password_field_value, story_params[:error_text]) %>

  <%= form_with model: [@tangible_thing], url: "#", local: true do |form| %>
    <%= render 'shared/fields/password_field', form: form, method: :password_field_value, options: {autofocus: true} %>
  <% end %>
<% end %>

<% content_for :source do %>
  <%= storybook_auto_source %>
<% end %>
