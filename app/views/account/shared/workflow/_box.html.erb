<% yield p = np %>

<div class="min-h-screen flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="bt-workflow-box mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">

      <div class="sm:mx-auto sm:w-full sm:max-w-md py-5">
        <a href="<%= main_app.root_path %>" class="block py-3">
          <img alt="" src="<%= image_path("logo/logo.png") %>" width="<%= image_width_for_height('logo/logo.png', 54) %>" height="54" class="mx-auto h-12 w-auto" />
        </a>
        <h2 class="mt-6 text-center text-3xl font-semibold tracking-tight">
          <%= title %>
        </h2>
      </div>

      <%= p.yield :body %>
    </div>
  </div>
</div>
