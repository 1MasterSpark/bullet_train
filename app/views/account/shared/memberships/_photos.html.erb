<% size ||= 12 %>

<div class="flex overflow-hidden">
  <% memberships.each_with_index do |membership, index| %>
    <%= image_tag membership_profile_photo_url(membership), class: "#{'-ml-1' if index > 0} inline-block h-#{size} w-#{size} rounded-full ring-2 ring-white" %>
  <% end %>
</div>

<% # we have to list out the evaluations we want possible above so purgecss includes them in production. %>
<% if false %>
  <div class="h-12 w-12"></div>
  <div class="h-9 w-9"></div>
<% end %>
