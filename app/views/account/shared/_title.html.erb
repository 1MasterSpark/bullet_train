<% yield p = np %>

<div class="flex flex-row">
  <div class="flex-auto">
    <h1 class="font-semibold text-base">
      <%= p.content_for(:title) %>
    </h1>
  </div>
  <div class="flex-auto text-right leading-6">
    <% if p.content_for? :actions %>
      <%= p.content_for :actions %>
    <% end %>
  </div>
</div>

<div class="mb-4">
  <%= render 'account/shared/line' %>
</div>
