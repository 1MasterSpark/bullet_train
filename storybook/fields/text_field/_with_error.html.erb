<% content_for :story do %>
  <% @tangible_thing = Scaffolding::CompletelyConcrete::TangibleThing.new(text_field_value: story_params[:text_field_value]) %>
  <% @tangible_thing.errors.add(:text_field_value, "Invalid input") %>

  <%= form_with model: [@tangible_thing], url: "#", local: true do |form| %>
    <%= render 'shared/fields/text_field', form: form, method: :text_field_value, options: {autofocus: true} %>
  <% end %>
<% end %>

<% content_for :source do %>
  <%= storybook_auto_source %>
<% end %>
