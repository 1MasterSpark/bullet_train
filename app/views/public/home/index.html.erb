<% @title = t('application.tagline') %>
<div class="intro-w layout-v1" id="sectionIntro">
  <div class="os-container">
    <div class="fade2">
    </div>
    <div class="intro-i">
      <div class="intro-description">
        <h1 class="intro-heading">Bullet Train is a Ruby on Rails <span>SaaS-in-a-Box</span></h1>

        <div class="intro-text">Bullet Train saves you weeks of development by starting you off with all the features that are the same in every SaaS, so you can focus on what makes your app unique.</div>

        <div class="intro-buttons">
          <a class="btn btn-primary" href="<%= subscriptions_enabled? ? pricing_path : new_user_registration_path %>"><i class="ti-shopping-cart-full"></i><span>Buy</span></a>
          <span class="intro-buttons-keep-together">
            <a class="btn btn-link" href="<%= subscriptions_enabled? ? pricing_path : new_user_registration_path %>"><i class="ti-desktop"></i><span>Live Demo</span></a>
            <a class="btn btn-link" href="https://calendly.com/bullettrain/introductions/02-01-2018" target="_blank"><i class="icon-phone"></i><span>Schedule a Call</span></a>
          </span>
        </div>
      </div>
      <div class="intro-media">
        <div class="shot shot1">
          <div class="shot-i" style="background-image: url('<%= image_path('homepage/pricing-small.png') %>')">
          </div>
        </div>
        <div class="shot shot2">
          <div class="shot-i" style="background-image: url('<%= image_path('homepage/sign-up-small.png') %>')">
          </div>
        </div>
        <div class="shot shot3">
          <div class="shot-i" style="background-image: url('<%= image_path('homepage/intro_dash.jpg') %>')">
          </div>
        </div>

        <div class="hidden-md-up" style="margin-bottom: 40px;"></div>

      </div>
    </div>
  </div>
</div>

<% try_it_now = {icon: 'ti-desktop', label: 'Try It Now', url: '/users/sign_in'} %>
